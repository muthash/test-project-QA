{
  "name": "e2e",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "test-ke": "playwright test --grep @KE",
    "test-tz": "playwright test --grep @TZ",
    "test-ug": "playwright test --grep @UG",
    "test-ng": "playwright test --grep @NG",
    "test-za": "playwright test --grep @ZA",
    "test:mobile-app": "playwright test --project=mobile-app",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "prepare": "cd .. && husky e2e/.husky",
    "generate": "npm run generate-schema && npx prisma generate",
    "generate-schema": "ts-node prisma/generate-schema.ts",
    "db:copy": "ts-node src/helpers/generationDB.ts"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "**/*.{js,ts,html}": "eslint --fix",
    "**/*.ts": "tsc-files --noEmit"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.6.4",
    "@playwright/test": "^1.47.2",
    "@prisma/client": "5.14.0",
    "bwip-js": "^4.5.1",
    "canvas": "^2.11.2",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "js-sha256": "^0.11.0",
    "pdf2json": "^3.1.4",
    "redis": "^4.7.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.9.1",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-perfectionist": "^3.4.0",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.3",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "prisma": "5.14.0",
    "tsc-files": "^1.1.4",
    "typescript": "^5.5.4"
  }
}
